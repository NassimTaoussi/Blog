{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="row d-flex">
        <section class="col-lg-6 col-sm-12" id="sectionPicture">
            <div class="row justify-content-center">
                    <img src="img/Nassim.jpg" class="img-fluid" alt="Me" style="width:500px; height: 800px">   
            </div>
        </section>

        <section class="col-lg-6 col-sm-12" id="sectionDescription">
            <div class="row justify-content-center">
                <h1 class="text-center mt-3">Nassim Taoussi</h1>
                <h3 class="text-center">Developpeur PHP</h3>

                <section class="container mt-4" id="sectionForm">
                    <div class="row d-flex justify-content-center text-center">
                        <div class="col-6 justify-content-center">
                            <form method="POST" action="">
                                <div class="col-12 mb-3">
                                    <label for="inputFirstName" class="form-label">Prénom</label>
                                    <input type="text" class="form-control" name="contactFirstname" id="inputFirstName">
                                </div>
                                {% if errors.firstName is defined %}
                                    <p>{{errors.firstName}}</p>
                                {% endif %}

                                <div class="col-12 mb-3">
                                    <label for="inputLastName" class="form-label">Nom</label>
                                    <input type="text" class="form-control" name="contactLastname" id="inputLastName">
                                </div>
                                {% if errors.lastName is defined %}
                                    <p>{{errors.lastName}}</p>
                                {% endif %}

                                <div class="col-12 mb-3">
                                    <label for="inputEmail" class="form-label">Adresse e-mail</label>
                                    <input type="email" class="form-control" name="contactEmail" id="inputEmail">
                                </div>
                                {% if errors.email is defined %}
                                    <p>{{errors.email}}</p>
                                {% endif %}

                                <div class="col-12 mb-3">
                                    <label for="inputMessage" class="form-label">Message</label>
                                    <textarea class="form-control" name="contactMessage" id="inputMessage" rows="7"></textarea>
                                </div>
                                {% if errors.message is defined %}
                                    <p>{{errors.message}}</p>
                                {% endif %}
                                
                                <input type="hidden" name="csrf_token" value="{{session.user.token}}">

                                <div class="col-12 text-center">
                                    <button type="submit" class="col-12 btn btn-primary" id="buttonSubmit">Envoyer</button>
                                <div>
                            </form>
                        </div>
                    </div>
                </section>
                <section class="mt-3 mb-5 d-flex justify-content-center">
                    <a class="btn btn-xl btn-outline-dark" href="pdf/NassimTaoussiCV.pdf" download="NassimTaoussiCV">
                        Télécharger mon CV
                    </a>
                </section>    
            </div>
        </section>
    </div>

    {% if session.user.flash is defined %}
        {% include 'component/_flash.html.twig' %}
    {% endif %}
    
{% endblock %}

{% block javascripts %}
        <script type="text/javascript">
            document.addEventListener("DOMContentLoaded", function(){
                var btn = document.getElementById("myBtn");
                var element = document.getElementById("myToast");

                // Create toast instance
                var myToast = new bootstrap.Toast(element);

                btn.addEventListener("click", function(){
                    myToast.show();
                });
            });
