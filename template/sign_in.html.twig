{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

    {% if session.user.valid == 1 %}
        <p class="mt-4 fs-3">Vous êtes déjà connecter, souhaitez vous vous déconnecter ?</p>
        <button type="submit" class="btn btn-danger mt-3" name="disconnect" value="Deconnexion"><a href="/disconnect" class="text-decoration-none text-light">Deconnexion</a></button>
        
    {% else %}
        <div class="container">
            <div class="row">
                <h1 class="text-center mt-4">Se connecter</h1>
            </div>
        </div>

        <section class="container" id="signInForm">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-6 justify-content-center">
                    <form method="POST" action="">
                        <div class="mb-3 mt-3">
                            <label for="email" class="form-label">Adresse e-mail</label>
                            <input type="email" class="form-control" name="email" id="email" value="{{ app.request.parameter.get("email")|default('') }}">
                        </div>
                        {% if errors.email is defined %}
                            <p> {{errors.email}} </p>
                        {% endif %}

                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" class="form-control" name="password" id="password">
                        </div>
                        {% if errors.password is defined %}
                            <p>{{errors.password}}</p>
                        {% endif %}

                        <div class="text-center mt-4">
                            <button type="submit" class="col-12 btn btn-primary">Envoyer</button>
                        <div>
                    </form>

                    {% if errors.userEmail is defined %}
                            <p>Cet utilisateur n'existe pas</p>
                    {% endif %}
                    {% if errors.userPassword is defined %}
                            <p>Le mot de passe n'est pas bon</p>
                    {% endif %}
                    
                    <div class="mt-4">
                        <a href="register">Vous n'avez pas de compte ? Inscrivez-vous</a>
                    <div>

                </div>
            </div>
        </section>
    {% endif %}
        
        
    
{% endblock %}