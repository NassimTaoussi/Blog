{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <div class="row">
        <h1 class="text-center mt-4">Liste des articles</h1>
 
    

        <nav aria-label="...">
            <ul class="pagination pagination-lg">
                {% for i in 1.. allPages %}
                    <li class="page-item {{ page == i ? "active"}} "><a class="page-link" href="?page={{i}}">{{i}}</a></li>
                {% endfor %}
            </ul>
        </nav>

        <table class="table table-sm">
            <thead>
                <tr>
                    <th scope="col">n°</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Auteur</th>
                    <th scope="col text-center">Date de mise à jour</th>
                    <th scope="col">Supprimer</th>
                    <th scope="col">Modifier</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                <tr>
                    
                        <th scope="row">{{article.id}}</th>
                        <td>{{article.title}}</td>
                        <td>{{article.authorName}}</td>
                        <td>{{ article.majDate|date("m/d/Y") }}</td>
                        <td>
                            <form method="POST" action="">
                                <input type="hidden" id="id" name="id" value="{{article.id}}">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </td>
                        <td>
                            <form method="POST" action="">
                                <input type="hidden" id="id" name="id" value="{{article.id}}">
                                <button type="submit" class="btn btn-info "><a href="/editPost/{{ article.id }}" class="text-decoration-none text-dark">Modifier</a></button>
                            </form>
                        </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
    